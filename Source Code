        function toggleChat() {
            chatBubble.classList.toggle('active');
            if (chatBubble.classList.contains('active')) {
                chatMessages.innerHTML = ''; // Clear previous messages
                addMessage('Hi there! I’m a chatbot here to help you learn more about Dipanjan Basak. What would you like to know?', 'ai');
            }
        }

        chatToggle.addEventListener('click', toggleChat);
        closeChat.addEventListener('click', toggleChat);

        function addMessage(content, type) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}`;
            messageDiv.textContent = content;
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
            return messageDiv;
        }

        // Function to show typing indicator
        function showTypingIndicator() {
            const typingMessage = addMessage('Typing...', 'typing');
            return typingMessage;
        }

        // Function to remove typing indicator
        function removeTypingIndicator(typingMessage) {
            if (typingMessage && typingMessage.parentNode) {
                typingMessage.parentNode.removeChild(typingMessage);
            }
        }

        // Function to call the Gemini API
        async function getResponse(message) {
            try {
                const prompt = `User_message:${message}. Reply naturally to the usermessage and if required then answer based on: ${myDescription} or just simply give friendly reply. And reply in a way that Dipanjan Basak is himself talking. Reply in short sentences.`;
                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${GEMINI_API_KEY}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        contents: [{
                            parts: [{ text: prompt }]
                        }]
                    })
                });

                if (!response.ok) {
                    throw new Error('API request failed');
                }

                const data = await response.json();
                const generatedText = data?.candidates?.[0]?.content?.parts?.[0]?.text || 'Oops! Something went wrong. Let’s try again.';
                return generatedText;
            } catch (error) {
                console.error('Error calling Gemini API:', error);
                return 'Sorry, I ran into an issue. Can you ask again?';
            }
        }

        sendMessage.addEventListener('click', async () => {
            const message = chatInput.value.trim();
            if (message) {
                addMessage(message, 'user');
                chatInput.value = '';

                // Show typing indicator
                const typingMessage = showTypingIndicator();

                // Wait for 1.5 seconds to simulate typing
                await new Promise(resolve => setTimeout(resolve, 1500));

                // Remove typing indicator
                removeTypingIndicator(typingMessage);

                // Fetch and display the response
                const response = await getResponse(message);
                addMessage(response, 'ai');
            }
        });

        chatInput.addEventListener('keypress', async (e) => {
            if (e.key === 'Enter') {
                sendMessage.click();
            }
        });

        // Slider functionality for project cards with multiple images
        const sliderCards = document.querySelectorAll('.project-card');
        sliderCards.forEach(card => {
            const images = card.querySelectorAll('.project-image');
            if (images.length > 1) {
                let currentIndex = 0;
                let interval;

                function showNextImage() {
                    images[currentIndex].classList.remove('active');
                    currentIndex = (currentIndex + 1) % images.length;
                    images[currentIndex].classList.add('active');
                }

                card.addEventListener('mouseenter', () => {
                    interval = setInterval(showNextImage, 2000);
                });

                card.addEventListener('mouseleave', () => {
                    clearInterval(interval);
                    images.forEach(img => img.classList.remove('active'));
                    images[0].classList.add('active');
                    currentIndex = 0;
                });
            }
        });
    </script>
